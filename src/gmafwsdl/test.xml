<process-flow name="VideoImport" extension=".jpg" isGeneral="false">
    <plugin-definition
            name="plugin1"
            class="de.swa.gmaf.plugin.googlevision.DominantColorsDetection"/>
    <plugin-definition
            name="plugin2"
            class="de.swa.gmaf.plugin.ExifHandler"/>
    <plugin-definition
            name="plugin3"
            class="de.swa.gmaf.plugin.googlevision.LabelDetection"/>

    <fusion-definition
            name="merge1"
            class="de.swa.gmaf.plugin.fusion.UnionFeatureFusion"/>
    <fusion-definition
            name="merge2"
            class="de.swa.gmaf.plugin.fusion.RelevanceOptimizer"/>

    <resource-definition
            name="upload-dir" type="folder" location="temp/upload"/>

    <param name="plugin3.lod" value="5"/>

    <flow-source name="upload-dir"/>
    <mmfg processor="plugin1, plugin2, plugin3"/>
    <fusion processor="merge1"/>

    <export target="collection" />
</process-flow>